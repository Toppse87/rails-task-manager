<% @tasks.each do |task| %>
  <h2> <%= link_to task.title, task_path(task) %> </h2>
<!--   <p> <%= task.details %> </p> -->
  <p> <%= task.completed %> </p>
  <p> <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %> </p>
<% end %>

<p> <%= link_to "Add a new task", new_task_path %> </p>
